<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoapRequestFragment">

    <ImageView
        android:id="@+id/icon_hostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/text_layout_input_hostname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_layout_input_hostname"
        app:srcCompat="@drawable/ic_dns" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_input_hostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="@string/hint_hostname"
        android:importantForAccessibility="yes"
        app:layout_constraintStart_toEndOf="@id/icon_hostname"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_text_hostname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="@string/default_coap_uri" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/icon_coap_request_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/spinner_coap_request_method"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_coap_request_method"
        app:srcCompat="@drawable/ic_coap_request_method" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_coap_request_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="yes"
        app:layout_constraintStart_toEndOf="@id/icon_coap_request_method"
        app:layout_constraintTop_toBottomOf="@id/text_layout_input_hostname" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_input_coap_request_path"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_coap_request_path"
        android:importantForAccessibility="yes"
        app:layout_constraintStart_toStartOf="@id/spinner_coap_request_method"
        app:layout_constraintTop_toBottomOf="@id/spinner_coap_request_method">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_text_coap_request_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_input_coap_request_query"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_coap_request_query"
        android:importantForAccessibility="yes"
        app:layout_constraintStart_toStartOf="@id/text_layout_input_coap_request_path"
        app:layout_constraintTop_toBottomOf="@id/text_layout_input_coap_request_path">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_text_coap_request_Query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_make_coap_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="yes"
        android:text="Run"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_layout_input_coap_request_query" />

</androidx.constraintlayout.widget.ConstraintLayout>